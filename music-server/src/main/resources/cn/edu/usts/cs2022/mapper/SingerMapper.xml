<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.usts.cs2022.mapper.SingerMapper">

    <select id="searchBySinger" resultType="cn.edu.usts.cs2022.pojo.po.Singer">
        select * from singer
        <where>
            <if test="keyword != null">
                and (name like concat('%', #{keyword}, '%'))
                or name in (select singer_name from song where song.name like concat('%', #{keyword}, '%'))
            </if>
        </where>
    </select>
</mapper>